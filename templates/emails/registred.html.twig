<html>
    <head>
        <style>
            a{
                text-decoration: none;
                color: inherit;
            }

            .email-container{
                font-family: 'Source Sans Pro';
            }

            .logo{
                margin: 25px;
            }

            .header-sepa{
                background: linear-gradient(240.94deg, #3BA14C 0%, #5CF776 101.17%);
                width: 100%;
                height: 5px;
            }


            .title{
                font-size: 34px;

                margin-bottom: 0;
            }

            .thx{
                margin-top: 5px;

                font-size: 18px;
            }

            .now-title{
                margin-top: 30px;
                margin-bottom: 0;

                font-weight: 600;
                font-size: 24px;
            }

            .now-link{
                font-size: 16px;

                line-height: 30px;
            }

            .bye{
                margin-top: 25px;
            }



            .footer-content{
                display: flex;
                justify-content: center;

                margin-top: 30px;
            }

            .footer-rs{
                list-style-type: none;
                display: flex;

                margin: 0;
                padding: 0;
            }

            .footer-rs li{
                margin: 0 10px;
            }
